<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./styles/style.css">
    <title>Blog Capstone</title>
</head>
<body>

    <%- include("partials/navbar.ejs") %>

    <section name="Add Post">

        <div class="create-form">

            <form method="post" action="/add">

                <h1>New Post</h1>

                <div class="form-field">
                    <label for="thumbnail">Post Thumbnail</label>
                    <input id="thumbnail-preview-field" type="url" name="thumbnail" placeholder="https://example.com/image.jpg">
                </div>

                <div class="form-field">
                    <img class="thumbnail-preview">
                    <!-- src="https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png" -->
                </div>

                <div class="form-field">
                    <label for="thumbnail">Title</label>
                    <input type="text" name="title" placeholder="A Day in the Life of a Developer">
                </div>

                <div class="form-field">
                    <label for="content">Body</label>
                    <textarea name="content" placeholder="Write your thoughts, insights, and story here..."></textarea>
                </div>

                <div class="form-field last-field">

                    <div>
                        <label for="author">Author</label>
                        <input type="text" name="author" placeholder="Jane Doe">
                    </div>

                    <input type="submit" value="Create Post">
                </div>

            </form>

        </div>

    </section>

    <%- include("partials/footer.ejs") %>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="./scripts/create.js"></script>
    
</body>
</html>